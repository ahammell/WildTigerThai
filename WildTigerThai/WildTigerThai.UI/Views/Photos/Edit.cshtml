@model WildTigerThai.DATA.EF.Photo

@{
    ViewBag.Title = "Edit";
}

<h2>Edit Photo</h2>

@using (Html.BeginForm(Html.BeginForm("Edit", "Photos", FormMethod.Post, new { enctype = "multipart/form-data" })))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Photo_ID)
        @Html.HiddenFor(model => model.File)
        <div class="form-group">
            @Html.LabelFor(model => model.PhotoType_ID, "PhotoType_ID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("PhotoType_ID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.PhotoType_ID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.File, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @{
                    var base64 = Convert.ToBase64String(Model.File);
                    var imgSrc = String.Format("data:image/gif;base64, {0}", base64);
                }
                <img src="@imgSrc" />
                <input id="file" name="file" type="file" />
                @Html.ValidationMessageFor(model => model.File, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
