@model WildTigerThai.DATA.EF.Photo

@{
    ViewBag.Title = "Details";
}

<div class="desktop">
    <h2>Photo Details</h2>

    <div class="dl-horizontal">
        <dl>
            <dt>
                @Html.DisplayNameFor(model => model.File)
            </dt>

            <dd>
                @{
                    var base64 = Convert.ToBase64String(Model.File);
                    var imgSrc = String.Format("data:image/gif;base64, {0}", base64);
                }
                <img src="@imgSrc" style="width: 100px;height:100px;margin-bottom:20px;" />
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.PhotoType.Type)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.PhotoType.Type)
            </dd>

        </dl>
        <p>
            @Html.ActionLink("Edit", "Edit", new { id = Model.Photo_ID }, htmlAttributes: new { @class = "btn btn-warning" })
            @Html.ActionLink("Back to List", "Index", null, htmlAttributes: new { @class = "btn btn-warning btn2" })
        </p>
    </div>
</div>
