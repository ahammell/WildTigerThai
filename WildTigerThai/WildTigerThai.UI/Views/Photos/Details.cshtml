@model WildTigerThai.DATA.EF.Photo

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Photo</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.File)
        </dt>

        <dd>
            @{
                var base64 = Convert.ToBase64String(item.File);
                var imgSrc = String.Format("data:image/gif;base64, {0}", base64);
            }
            <img src="@imgSrc" />
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PhotoType.Type)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PhotoType.Type)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Photo_ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
